@param problemDetail: org.springframework.http.ProblemDetail?
@param pointer: String

!{val errors = problemDetail?.properties?.get("errors") as? List<com.leijendary.model.ErrorModel>}
!{val message = errors?.firstOrNull { it.pointer == pointer }?.message}

@if (message != null)
  <div style="color: red">${message}</div>
@endif
